    //     var IDPhongBan = $('#IDPhongBan').val();
    //     window.location.href = '@Url.Action("ExportToExcel", "TrinhKy")?IDPhongBan=' + $('#IDPhongBan').val() + '&begind=' + $('#begind').val() + '&endd=' + $('#endd').val();

    // });
</script>