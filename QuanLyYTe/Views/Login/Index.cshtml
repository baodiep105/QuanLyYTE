
@model QuanLyYTe.Models.TaiKhoan;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Quản lý y tế</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <meta name="description" content="overview &amp; stats" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />
    <link rel="stylesheet" href="~/Content/assets/css/font-awesome.min.css">
    <!-- Favicons -->
    <link rel="icon" href="/favicon.ico" type="image/png" />

    <link href="~/Content/assets/css/style_login.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</head>
<body style="margin:0px;">
    <div class="bg-text" style="display:flex;">
        <div class="container" id="container" style="width:30%;">
            <div style="margin-top: 30%; margin-left: 13%; margin-right: 6%;">
                <img style="width:90%;" src="~/images/user/logo.png">
            </div>
            <div>
                <h1 style="color: #05428c; margin-bottom: 2%; margin-left: 5%;">
                    <div style="text-align:center">
                        HỆ THỐNG QUẢN LÝ  <br />
                    </div>
                    <div style="text-align:center">
                       Y TẾ
                    </div>

                </h1>
            </div>
            <div style="margin-top: 10%; border: 1.5px solid #0056b3; margin-left: 20px; margin-right: 20px; border-radius: 4px; box-shadow: 2px 2px 10px gray; ">
                <h2 style="color: #05428c; padding: 3% 0% 2% 32%; border-bottom: 1px solid #eaecf0; padding-bottom: 3%; ">
                    ĐĂNG NHẬP
                </h2>
                @using (Html.BeginForm("LoginUser", "Login", new { id = "myForm", style = "color: #eaecf0" }))
                {
                    <div style="width: 95%; margin: 2%; border-radius: 5px; color: #eaecf0; display:flex;border: ridge;">
          
                        <img style="margin: 3%; height: 15px;" class="rounded-circle" src="~/images/user/UserName.png" alt="">
                        @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "text-danger", placeholder = "Tên đăng nhập", style = "width:100%;border: aliceblue;" })
                        @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger" })
                    </div>
                    <div style="width: 95%;margin: 2%; border-radius: 5px; display: flex;border: ridge;margin-top: 5%;">

                        <img style="margin: 3%; height: 15px;" class="rounded-circle" src="~/images/user/Pass.png" alt="">
                        @Html.PasswordFor(m => m.MatKhau, new { @class = "text-danger", placeholder = "Mật khẩu", style = "width:100%; border: aliceblue;" })
                        @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger" })
                       
                    </div>
                    <div style="width: 100%; margin: 2%;">
                        <button style="margin-top: 5%; margin-bottom: 5%; background: #1d428a;width: 96%;height:40px;color:white;border: ridge;border-radius: 5px;">
                            <h4 style="margin:0px;"> ĐĂNG NHẬP </h4>
                        </button>
                    </div>
                }

            </div>
        </div>
        <div style="width:100%;height:870px;">
            <img style="width: 100%;height:870px;" src="~/images/user/DJI_0189.jpg">
        </div>

    </div>
    <div style="background-color:#1d428a;height:83px;">
        <footer class="py-4 bg-light mt-auto">
            <div class="container-fluid" style="padding-top: 2%; padding-left: 1%;">
                <div class="d-flex align-items-center justify-content-between small">
                  
                    <div class="text-muted" style="color:white;text-align: right;padding-right: 1%;">Copyright &copy; @DateTime.Now.Year Ban Công nghệ thông tin </div>
                </div>
            </div>
        </footer>
    </div>
</body>
</html>
